/* 悬浮窗 */
.floating-window{
  position: fixed;
  bottom: 160rpx;
  right: 20rpx;
  width: 96rpx;
  height: 96rpx;
  z-index: 99;
  transition: transform .3s;
}
/* 领取优惠弹窗 my-popup */
.my-popup{
  margin-top: 57rpx;
  position: relative;
  box-sizing: border-box;
  width: 500rpx;
  border-radius:16rpx;
  background: #fff;
  padding: 40rpx 0; 
  /* height: 480rpx; */
  text-align: center;
}
.my-popup-title{
  
}
.my-popup-h2{
  margin: 10rpx 0 20rpx;
  font-weight: bold;
  font-size: 52rpx;
}
.my-popup-inner{
  padding: 64rpx 0;
}
.my-popup-button{
  box-sizing: border-box;
  display: inline-block;
  border-radius:44rpx;
  width: 404rpx;
  height:88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background: #A2D085;
  margin-bottom: 40rpx;
}
.my-popup-button2{
  box-sizing: border-box;
  display: inline-block;
  font-size: 28rpx;
  color: #5CAE32;
  border-bottom: 1px solid #5CAE32;
  margin-bottom: 30rpx;
}
.my-popup-close{
  width: 64rpx;
  height:64rpx;
  margin: 50rpx auto;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100%;
}