/* pages/location/location.wxss */
page{
  background: #fff;
}
.search-box{
  box-sizing: border-box;
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;  
}
.search-inner{
  box-sizing: border-box;
  width: 100%;
  height: 88rpx;  
  font-size: 32rpx;
  color: #999;
  border-radius: 44rpx;
  border: 1px solid #979797;
  display: flex;
  align-items: center;
  justify-content: center;
}
.location-box{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background:#F6F6F6;
  text-align: center; 
}
.icon-location{
  display: inline-block;
  margin-right: 14rpx; 
  width: 36rpx;
  height: 36rpx; 
}
.location-title{
  font-size: 32rpx;
  color: #666;
}
/*  */
.list{
  box-sizing: border-box;
  padding-left: 40rpx;
  padding-right: 40rpx;
  margin-bottom: 50rpx;
}
.list-header{
  font-size: 44rpx;
  color: #333;
  padding: 55rpx 0 40rpx;
}
.list-item{
  /* height: 90rpx; */
  margin-bottom: 40rpx;
}
.nearby-list .list-item{
  /* height: 90rpx; */
  margin-bottom: 56rpx;
}
.list-item-title{
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.list-item-txt{
  font-size: 32rpx;
  color: #999;
}