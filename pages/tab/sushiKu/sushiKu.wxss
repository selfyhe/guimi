/* pages/tab/sushiKu/sushiKu.wxss */
page{
  background: #fff;
}
.slide-box{ 
  box-sizing: border-box; 
  width: 100%;
  padding: 30rpx 40rpx;
}
.slide-container{
  width: 100%;
  height: 280rpx;
}
.slide-image{
 
}   
/*  */
.head{
  box-sizing: border-box;
  padding: 0 40rpx; 
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}
.head-item{
  position: relative;
  box-sizing: border-box;
  padding: 26rpx 40rpx;
  width:320rpx;
  height:200rpx;
  border-radius:34rpx;
  overflow: hidden;
  box-shadow:0px 1px 4px 0px rgba(217,217,217,1);
}
.head-item-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.head-item-txt{
  font-size: 24rpx;
  color: #333;
}
.head-item-icon{
  position: absolute;
  bottom: 20rpx;
  right: 36rpx;
}
.head-item:nth-child(1) .head-item-icon{
  width: 96rpx;
  /* height: 126rpx; */
}
.head-item:nth-child(2) .head-item-icon{
  width: 80rpx;
  /* height: 80rpx; */
}
/*  */
.icon-moment{
  margin-right: 15rpx;
  width: 36rpx;
  height: 36rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
.notice-box{
  height: 50rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  margin-bottom: 5rpx;
  justify-content: flex-start;
  align-items: center;
}
.notice-title{
  flex: 1;
  font-size: 36rpx;
  color: #000;
  font-weight:bold;
}
.noticeSub{
  margin-bottom: 10rpx;
  padding: 0 40rpx;
  font-size: 26rpx;
  color: #666;
}
/*  */
.list{
  box-sizing: border-box;
  padding: 0 40rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.list-header{
  box-sizing: border-box;
  width: 100%;
  padding: 24rpx 0;
  color: #333;
  font-size: 32rpx; 
}
.list-item{
  box-sizing: border-box;
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center; 
}
.list-item-media{ 
  box-sizing: border-box;
  width: 220rpx;
  height: 220rpx;
  margin-right: 40rpx; 
  overflow: hidden;
  border-radius: 40rpx;
}
.list-item-inner{
  box-sizing: border-box;
  flex: 1;
  height: 220rpx;
  /* padding: 12rpx 0; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.list-item-top,.list-item-bottom{
  width: 100%;
}
.list-item-title{ 
  font-size: 32rpx;
  color: #000;
  font-weight:bold;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.pull-right{
  display: block;
  float: right;
}
.list-item-txt{
  font-size: 24rpx;
  color: #666;
}
.list-item-bottom{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.list-item-price{
  font-size: 36rpx;
  color: #000;
  /* font-weight: bold; */
  /* padding-top: 40rpx; */
}
.list-item-counter--round{
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  /* align-items: center; */
  justify-content: center; 
  background:#5CAE32;
}
.bg-red{
  background: #A2D085;
}