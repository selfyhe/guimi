/* pages/tab/shopCart/shopCart.wxss */
page{
  background: #fff;
}
.list-item-radio{
  width: 70rpx;
  /* height: 100%; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
/*  */
.list{
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background: #fff;
}
.list-header{
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 40rpx;
  color: #333;
  font-size: 28rpx; 
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mr-10{
  margin-right: -10rpx!important;
}
.list-header-bd{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.list-item{
  position: relative;
  box-sizing: border-box;
  height: 200rpx;
  overflow: hidden;
}
.list-item-media{ 
  box-sizing: border-box;
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx; 
  overflow: hidden;
  border-radius: 12rpx;
}
.list-item-inner{
  box-sizing: border-box;
  flex: 1;
  height: 160rpx;
  /* padding: 12rpx 0; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.list-item-top,.list-item-bottom{
  width: 100%;
}
.list-item-title{ 
  font-size: 28rpx;
  color: #000;
  /* font-weight:bold; */
  /* margin-bottom: 10rpx; */
  overflow: hidden;
}
.pull-right{
  display: block;
  float: right;
}
.list-item-txt{
  font-size: 24rpx;
  color: #666;
}
.list-item-bottom{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.list-item-price{
  font-size: 24rpx;
  color: #000;
  /* font-weight: bold; */
  /* padding-top: 40rpx; */
}
.list-item-counter--round{
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  line-height: 1;
  color: #fff;
  font-weight: bold;
  background: #A2D085;
}
.bg-red{
  background: #A2D085;
}
/*  */
.affix-bar{ 
  box-sizing: border-box;
  width: 100%;
  /* padding: 20rpx 40rpx;  */
  /* padding: 12rpx 40rpx;  */
  height: 110rpx;
  padding: 0 40rpx;
  position: fixed;
  z-index: 99;
  left: 0;
  bottom: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  font-size: 28rpx;
  color: #fff;
  background: #A2D085;
  /* text-align: center;  */
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.affix-bar-hd{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.affix-bar-hd-left{
  
}
.affix-bar-button{
  display: inline-block;
  padding: 14rpx 64rpx;
  border: 1px solid #fff;
  border-radius: 36rpx;
  color: #fff;
} 
.btn-disabled{
  opacity: .6; 
  pointer-events: none;
}
.affix-bar-message{
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 8rpx 30rpx;
  border-radius:28rpx;
  color: #fff;
  font-size: 24rpx;
  background: #A2D085;
  white-space: nowrap;
}
.font-44{
  font-size: 44rpx;
}
.ml10{
  margin-left: 10rpx;
}
/* del */
.list-item-del,.list-item-content{
  position: absolute;
  top: 0;
}
.list-item-del{ 
  box-sizing: border-box;
  right: 0;
  z-index: 10;
  width: 180rpx;
  height: 200rpx;
  color: #fff;
  font-size: 32rpx;
  background: #ff0000;
  display: flex;
  justify-content: center;
  align-items: center;  
}
.list-item-content{
  box-sizing: border-box;
  z-index: 20;
  /* transition: left 0.2s ease-in-out; */
  width: 100%;
  height: 200rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
}