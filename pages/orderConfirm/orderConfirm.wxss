.affix-bar{
  box-sizing: border-box;
  width: 100%;
  /* padding: 20rpx 40rpx;  */
  height: 110rpx;
  padding: 0 40rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  font-size: 28rpx;
  color: #fff;
  background: #A2D085;
  /* text-align: center;  */
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.affix-hd{
  font-size: 28rpx; 
}
.affix-bar-button{
  display: inline-block;
  padding: 14rpx 64rpx;
  border: 1px solid #fff;
  border-radius: 36rpx;
  color: #fff;
} 
.affix-bar-message{
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 8rpx 30rpx;
  border-radius:28rpx;
  color: #fff;
  font-size: 24rpx;
  background: #A2D085;
  white-space: nowrap;
}
.font-44{
  font-size: 44rpx;
  font-weight: bold;
}
.mr-5{
  margin-right: -10rpx;
}
