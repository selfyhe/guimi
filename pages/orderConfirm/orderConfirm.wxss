.order-detail{
  /* padding: 30rpx 40rpx 0;  */
  margin: 0 40rpx;
  position: relative;
  box-sizing: border-box; 
  background: #fff;
  font-size: 28rpx;
  border-radius:6px;
  padding: 0 30rpx;
} 
.order-detail-hd{
  border-bottom: 1px dotted #e6e6e6;
  padding: 40rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  color: #333;
  font-size: 36rpx;
}
.dotted::before{
  content: "";
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #f6f6f6;
  position: absolute;
  top: -14rpx;
  left: -45rpx; 
  /* box-shadow:0 1px 1px rgba(184, 195, 206, 0.3) inset; */
}
.dotted{
  position: relative;
  /* position: absolute; */
  /* top: 100rpx; */
  /* left: 0; */
  width: 100%;
  height: 1px;
  /* z-index: 10; */
}
.dotted::after{
  content: "";
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #f6f6f6;
  position: absolute;
  top: -14rpx;
  right: -45rpx;
  /* box-shadow:0 1px 1px rgba(184, 195, 206, 0.3) inset; */
} 
.order-detail-bd{
  /* padding: 30rpx 0; */
  /* border-bottom: 1px dotted #e6e6e6; */
}
.border-bottom{
  border-bottom: 1px dotted #e6e6e6;
}
.order-detail-inner{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #333; 
}
.order-detail-ft{
  border-top:1px dotted #e6e6e6;
  padding: 40rpx 0 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  color: #333;
} 
.sawtooth{
  position: absolute;
  left:0;
  bottom: 0;
  width: 100%;
  height: 16rpx;
  background: url(data:image/png;base64,);
  background-position: left bottom;
  background-size: contain;
}
