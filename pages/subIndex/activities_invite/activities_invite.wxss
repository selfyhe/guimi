page{
  background: #fff;
}
.container{
  position: relative;
}
.playbill{
  width: 100%; 
  min-height: 814rpx;
}
.share-box{
  background: #fff;
  padding-bottom: 10rpx;
}
.share-inner{ 
  background: #fff;
  box-shadow:0px 2px 4px 0px rgba(213,213,213,0.5);
  border-radius:12rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 0 40rpx;
  height:274rpx;
}
.share-item{
  position: relative;
  text-align: center;
}
.share-button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.share-item-media{
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 10rpx;
}
.share-item-title{

}
/*  */
.ul{
  background: #fff;
}
.ul-header{
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
.li{
  box-sizing: border-box;
  padding: 15rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.li-media{
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 50%;
  background: #eee;
}
.li-inner{
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.li-title{
  font-size: 32rpx;
  color: #333;
  flex: 1;
  width:0;
}
.li-txt{ 
  font-size: 30rpx;
  color: #333;
}
/*  */
.panel-box{
  padding: 0 40rpx;
  background: #fff;
}
.panel-header{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
.panel-header-title{
  position: relative;
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
}
.panel-header-title::before{
  content: "";
  position: absolute;
  top: 50%;
  left: -100rpx;
  width: 80rpx;
  height: 1px;
  background: #D8D8D8;
}
.panel-header-title::after{
  content: "";
  position: absolute;
  top: 50%;
  right: -100rpx;
  width: 80rpx;
  height: 1px;
  background: #D8D8D8;
}
.panel-content{
   text-align:justify;
}
.rules{
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
  padding-bottom: 80rpx;
 
}
