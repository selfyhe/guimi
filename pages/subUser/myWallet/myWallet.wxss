  position: relative;
  z-index: 30;
  margin-top: -20rpx;
  background: #fff;
  border-radius:32rpx;
}
.ul-header{
  padding: 30rpx 40rpx;
  font-size: 32rpx;
  color: #5CAE32;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.li{
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;

}
.li-h2{
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.li-title{
  font-size: 24rpx;
  color: #333; 
}
.li-button{
  display: inline-block;
  box-sizing: border-box;
