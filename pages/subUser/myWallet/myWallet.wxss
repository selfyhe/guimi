.header{
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 270rpx;
  background: #A2D085;
  border-top-left-radius:32rpx;
  border-top-right-radius: 32rpx;
}
.header-bg{
  position: absolute;
  top: 0;
  left: 146rpx;
  width: 412rpx;
  height: 248rpx;
  /* opacity:0.1199; */
}
.header-inner{
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 270rpx;
}
.yue{
  font-size: 64rpx;
  font-weight: bold;
  margin-left: 10rpx;
}
.header-hd{
  padding-left: 44rpx;
}
.header-money{
  font-size: 28rpx;
  color: #fff;
}
.header-title{
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 16rpx;
}
.header-btn{  
  padding: 16rpx 18rpx 16rpx 34rpx;
  background: #fff;
  font-size: 28rpx;
  color: #A2D085 ;
  border-radius:40rpx 0 0 40rpx;
}
.ml15{
  margin-left: 15rpx;
}
