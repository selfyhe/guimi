.color-orange{
  color: #A2D085;
}
.tabs{
  box-sizing: border-box;
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content:space-around;
  align-items: center;
  background: #fff;
}
.tab-item{
  box-sizing: border-box;
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  transition: all .3s; 
}
.tab-item-active{
  color: #5CAE32;
  font-weight: bold; 
}
.tab-item::after{
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left:-20rpx;
  width: 0;
  height: 6rpx;
  border-radius:2px;
  background-color: #5CAE32;
  transition: all .3s;  
}
.tab-item-active::after{
  content: ""; 
  width: 40rpx;  
}
